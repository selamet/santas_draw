# Environment Configuration
# Set to 'production', 'staging', or 'local' (default)
ENVIRONMENT=local

# Production/Staging Database Settings (Required when ENVIRONMENT=production or staging)
DB_NAME=santasdraw_production
DB_USER=santasdraw_user
DB_PASSWORD=your_strong_database_password
DB_HOST=localhost
DB_PORT=5432

# Security Settings (Required when ENVIRONMENT=production or staging)
SECRET_KEY=your-very-secret-key-here-change-this-in-production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Debug Setting (Optional for staging - defaults to False)
DEBUG=False

# SSL/Security Settings (Optional - defaults provided for production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
X_FRAME_OPTIONS=DENY

# Static and Media Files (Optional - defaults provided)
STATIC_ROOT=/path/to/static/files
MEDIA_ROOT=/path/to/media/files
MEDIA_URL=/media/

# CORS Settings (Optional - defaults provided)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=False

# Email Settings (Optional - defaults provided)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Logging Settings (Optional - defaults provided)
DJANGO_LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO